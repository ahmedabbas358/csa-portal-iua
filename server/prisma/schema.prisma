// This file was generated by the System.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User Model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(MEMBER)
  fullName  String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  settings  ThemeSettings?
  sessions  Session[]
}

enum Role {
  MEMBER
  ADMIN
  DEAN
}

// Theme Persistence
model ThemeSettings {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  primaryColor    String   @default("#2563EB")
  secondaryColor  String   @default("#1E40AF")
  pattern         String   @default("none")
  borderRadius    String   @default("xl")
  animationSpeed  String   @default("normal")
  fontStyle       String   @default("sans")
  iconStyle       String   @default("simple")
  
  updatedAt       DateTime @updatedAt
}

// Session Management (Optional if using stateless JWT, helpful for revocation)
model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique // Refresh token
  expiresAt DateTime
  createdAt DateTime @default(now())
}
