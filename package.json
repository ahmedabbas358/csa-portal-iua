{
  "name": "csa-portal-iua",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npx prisma generate && tsc -p tsconfig.server.json && vite build",
    "preview": "vite preview",
    "prestart": "sh -c \"DATABASE_URL=${DATABASE_URL:-file:./prisma/dev.db} npx prisma db push --accept-data-loss && DATABASE_URL=${DATABASE_URL:-file:./prisma/dev.db} npx prisma db seed\"",
    "start": "node --loader ts-node/esm --no-warnings server/src/index.ts",
    "server": "node --loader ts-node/esm --no-warnings server/src/index.ts",
    "db:push": "DATABASE_URL=file:./prisma/dev.db npx prisma db push",
    "db:studio": "DATABASE_URL=file:./prisma/dev.db npx prisma studio",
    "db:seed": "DATABASE_URL=file:./prisma/dev.db npx prisma db seed"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "dependencies": {
    "@google/genai": "^1.41.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.564.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "prisma": "^5.10.0",
    "@prisma/client": "^5.10.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "serve": "^14.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.19.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "nodemon": "^3.1.11",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^6.0.0"
  }
}